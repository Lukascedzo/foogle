        };

        function searchRecipe() {
            const search = document.getElementById('search').value.toLowerCase();
            const recipeDiv = document.getElementById('recipe');
            if (recipes[search]) {
                recipeDiv.textContent = recipes[search];
            } else {
                recipeDiv.textContent = `No recipe found or spelling mistake for '${search}'`;
            }
        }
    </script>
</body>
</html>
